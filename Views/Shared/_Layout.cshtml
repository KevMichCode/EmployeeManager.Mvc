<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Manager</title>
    <link href="~/Styles/style.css" rel="stylesheet" asp-append-version="true" type="text/css"/>
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <h1>Employee Manager - <a asp-controller="EmployeeManager" asp-action="Help">Access the Help</a></h1>
    <hr />
    <div>
        @RenderBody()
    </div>
    <hr />
    @if(User.Identity.IsAuthenticated)
    {
        <h2>You are signed in as @User.Identity.Name</h2>
        <form asp-controller="Security" asp-action="Signout" method="post">
            <button type="submit">Sign Out</button>
        </form>
    }

</body>
</html>
